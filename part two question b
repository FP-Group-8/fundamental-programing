#include <iostream>
using namespace std;

int main() {
    int n;
    cout<<"Enter any number: ";
    cin>>n;

    for (int i = 0; i <= n; i++) {
            // print spaces
        for (int j = 0; j < i; j++) {
            cout << "  ";
        }
           //print numbers
        for (int k = 0; k <= n-i; k++) {
            cout << k << " ";
        }
           //print numbers in revers
        for (int l = n-i-1; l >=0; l--) {
            cout << l << " ";
        }

        cout << endl;
    }
for(int i=1; i<=n; i++) {
        // print spaces
        for(int j=0; j<=n-i-1; j++) {
            cout << "  ";
        }
        // print numbers
        for(int k=0; k<=i; k++) {
            cout << k << " ";
        }
        // print reverse numbers
        for(int l=i-1; l>=0; l--) {
            cout << l << " ";
        }
        // print spaces
        for(int m=0; m<=n-i-1; m++) {
            cout << "  ";
        }
        cout << endl;
}

    return 0;
}
